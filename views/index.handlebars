<div class="container">
    <section id="page-name">
            <img id="main-image" src="http://pngimg.com/uploads/burger_sandwich/burger_sandwich_PNG4114.png" width="250px" frameBorder="0" class="giphy-embed" allowFullScreen>
            <h1>Eat-Da-Burger</h1>
    </section>

    <section class="row">
        <div class="col-md-7 col-left">
            <table><h3><u>Burgers</u></h3></table>
            <table>
                {{#each burgers}}
                    {{#unless devoured}}
                        {{> burgers/burger-block}}
                    {{/unless}}
                {{/each}}
            </table>
        </div>
        <div class="col-md-5 col-right">
            <table><h3><u>Devoured!</u></h3></table>
            {{#each burgers}}
                {{#if devoured}}
                    <div>{{id}}. {{burger_name}}</div>
                {{/if}}
            {{/each}}        
        </div>          
    </section>

    <form class="create-form">
        <div class="form-group">
            <label for="name"></label>
            <textarea id="name" name="burger-name" rows="2" cols="40" placeholder="Burger name here"></textarea>
        </div>
        <button type="submit">Add Burger</button>
    </form>     
</div>
